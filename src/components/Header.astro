---
// Header.astro
---

<header class="fixed top-0 left-0 w-full bg-white/90 backdrop-blur-md border-b border-gray-200 z-50 transition-all duration-300 shadow-sm" id="header">
  <nav class="container-custom">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <div class="flex items-center space-x-3">
        <img src="/logo.png" alt="Maxwell Soluciones Tecnológicas Logo" class="h-12 w-12 object-contain" />
        <div class="flex flex-col">
          <span class="font-heading font-bold text-xl text-primary">MAXWELL</span>
          <span class="text-sm text-secondary font-medium">Soluciones Tecnológicas</span>
        </div>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="#inicio" class="text-primary hover:text-accent font-medium transition-colors duration-300">Inicio</a>
        <a href="#nosotros" class="text-primary hover:text-accent font-medium transition-colors duration-300">Nosotros</a>
        <a href="#servicios" class="text-primary hover:text-accent font-medium transition-colors duration-300">Servicios</a>
        <a href="#contacto" class="btn-primary">Contacto</a>
      </div>

      <!-- Mobile Menu Button -->
      <button class="md:hidden flex flex-col space-y-1 w-6 h-6 group" id="mobile-menu-button">
        <span class="block w-full h-0.5 bg-primary transition-all duration-300 group-hover:bg-accent"></span>
        <span class="block w-full h-0.5 bg-primary transition-all duration-300 group-hover:bg-accent"></span>
        <span class="block w-full h-0.5 bg-primary transition-all duration-300 group-hover:bg-accent"></span>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div class="md:hidden fixed top-0 left-0 w-full h-screen bg-white transform translate-x-full transition-transform duration-300 z-40" id="mobile-menu">
      <!-- Close Button -->
      <button class="absolute top-6 right-6 text-primary hover:text-accent text-3xl z-50" id="mobile-close-btn">
        <i class="fas fa-times"></i>
      </button>
      
      <!-- Menu Content -->
      <div class="flex flex-col items-center justify-center w-full h-full space-y-8 px-8">
        <a href="#inicio" class="text-2xl font-medium text-primary hover:text-accent transition-colors duration-300 mobile-link text-center w-full py-4">Inicio</a>
        <a href="#nosotros" class="text-2xl font-medium text-primary hover:text-accent transition-colors duration-300 mobile-link text-center w-full py-4">Nosotros</a>
        <a href="#servicios" class="text-2xl font-medium text-primary hover:text-accent transition-colors duration-300 mobile-link text-center w-full py-4">Servicios</a>
        <a href="#contacto" class="text-2xl font-medium text-primary hover:text-accent transition-colors duration-300 mobile-link text-center w-full py-4">Contacto</a>
      </div>
    </div>
  </nav>
</header>

<style>
  #mobile-menu.mobile-menu-open {
    transform: translateX(0);
  }
</style>

<script>
  // Mobile menu functionality
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileCloseBtn = document.getElementById('mobile-close-btn');
  const mobileLinks = document.querySelectorAll('.mobile-link');

  // Open mobile menu
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.add('mobile-menu-open');
  });

  // Close mobile menu
  const closeMobileMenu = () => {
    mobileMenu?.classList.remove('mobile-menu-open');
  };

  // Close button functionality
  mobileCloseBtn?.addEventListener('click', closeMobileMenu);

  // Close mobile menu when clicking on a link
  mobileLinks.forEach(link => {
    link.addEventListener('click', closeMobileMenu);
  });

  // Header scroll effect
  window.addEventListener('scroll', () => {
    const header = document.getElementById('header');
    if (window.scrollY > 50) {
      header?.classList.add('bg-white/95', 'backdrop-blur-lg', 'shadow-md');
      header?.classList.remove('bg-white/90', 'backdrop-blur-md', 'shadow-sm');
    } else {
      header?.classList.add('bg-white/90', 'backdrop-blur-md', 'shadow-sm');
      header?.classList.remove('bg-white/95', 'backdrop-blur-lg', 'shadow-md');
    }
  });
</script>
