---
// Header.astro
---

<header class="fixed top-0 left-0 w-full bg-white/95 backdrop-blur-sm border-b border-gray-200 z-50 transition-all duration-300" id="header">
  <nav class="container-custom">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <div class="flex items-center space-x-3">
        <img src="/logo.png" alt="Maxwell Soluciones Tecnológicas Logo" class="h-12 w-12 object-contain" />
        <div class="flex flex-col">
          <span class="font-heading font-bold text-xl text-primary">Maxwell</span>
          <span class="text-sm text-secondary font-medium">Soluciones Tecnológicas</span>
        </div>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="#inicio" class="text-primary hover:text-accent font-medium transition-colors duration-300">Inicio</a>
        <a href="#nosotros" class="text-primary hover:text-accent font-medium transition-colors duration-300">Nosotros</a>
        <a href="#servicios" class="text-primary hover:text-accent font-medium transition-colors duration-300">Servicios</a>
        <a href="#contacto" class="btn-primary">Contacto</a>
      </div>

      <!-- Mobile Menu Button -->
      <button class="md:hidden flex flex-col space-y-1 w-6 h-6 group" id="mobile-menu-button">
        <span class="block w-full h-0.5 bg-primary transition-all duration-300 group-hover:bg-accent"></span>
        <span class="block w-full h-0.5 bg-primary transition-all duration-300 group-hover:bg-accent"></span>
        <span class="block w-full h-0.5 bg-primary transition-all duration-300 group-hover:bg-accent"></span>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div class="md:hidden fixed inset-0 bg-white/95 backdrop-blur-sm transform translate-x-full transition-transform duration-300 z-40" id="mobile-menu">
      <div class="flex flex-col items-center justify-center h-full space-y-8">
        <a href="#inicio" class="text-2xl font-medium text-primary hover:text-accent transition-colors duration-300 mobile-link">Inicio</a>
        <a href="#nosotros" class="text-2xl font-medium text-primary hover:text-accent transition-colors duration-300 mobile-link">Nosotros</a>
        <a href="#servicios" class="text-2xl font-medium text-primary hover:text-accent transition-colors duration-300 mobile-link">Servicios</a>
        <a href="#contacto" class="text-2xl font-medium text-primary hover:text-accent transition-colors duration-300 mobile-link">Contacto</a>
      </div>
    </div>
  </nav>
</header>

<style>
  .mobile-menu-open {
    transform: translateX(0);
  }
</style>

<script>
  // Mobile menu functionality
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileLinks = document.querySelectorAll('.mobile-link');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('mobile-menu-open');
  });

  // Close mobile menu when clicking on a link
  mobileLinks.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.remove('mobile-menu-open');
    });
  });

  // Header scroll effect
  window.addEventListener('scroll', () => {
    const header = document.getElementById('header');
    if (window.scrollY > 50) {
      header?.classList.add('bg-white/98');
      header?.classList.remove('bg-white/95');
    } else {
      header?.classList.add('bg-white/95');
      header?.classList.remove('bg-white/98');
    }
  });
</script>
